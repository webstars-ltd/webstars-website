---
import { renderRichText, type ISbRichtext } from '@storyblok/astro';

interface Props {
  image: string;
  imageAlt: string;
  byline: any;
}

const { image, imageAlt, byline } = Astro.props;
---

<div class="flex flex-col gap-6 text-center justify-center items-center">
  <figure class="overflow-hidden rounded-[50%]">
    <img src={image} alt={imageAlt} class="w-[200px] h-auto" />
  </figure>

  <div class="md:col-span-7 md:col-start-6">
    {
      byline && (
        <div
          class="insight-content prose font-bitter max-w-none dark:text-white"
          set:html={renderRichText(byline as ISbRichtext)}
        />
      )
    }
  </div>
</div>

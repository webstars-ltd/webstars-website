---
import { format } from 'date-fns';

interface Props {
  byline: string;
  date: string;
}

const { byline, date } = Astro.props;
---

<div class="flex flex-row gap-3 justify-center items-center font-bitter">
  <p class="font-[900] dark:text-brand-primary-900">{byline}</p>
  <time datetime={date}>
    {format(new Date(date ?? ''), 'MMMM do, yyy')}
  </time>
</div>
